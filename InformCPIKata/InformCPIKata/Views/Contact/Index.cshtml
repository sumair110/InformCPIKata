@model IEnumerable<InformCPIKata.Models.Contact>

@{
	ViewData["Title"] = "Contact List";
}

<h2>Contacts</h2>

<p>
	<a asp-controller="Contact" asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var contact in Model)
		{
			<tr>
				<td>@contact.Id</td>
				<td>@contact.FirstName</td>
				<td>@contact.LastName</td>
				<td>@contact.Email</td>
				<td>@contact.Phone</td>
				<td>
					<a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-primary">Edit</a>
					<a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>