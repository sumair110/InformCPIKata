@model InformCPIKata.Models.Contact

@{
	ViewData["Title"] = "Delete Contact";
}

<h2>Delete</h2>
<div>
	<h4>Are you sure you want to delete this Contact?</h4>
	<div>
		<h4>First Name:</h4>
		<p>@Model.FirstName</p>
	</div>
	<div>
		<h4>Last Name:</h4>
		<p>@Model.LastName</p>
	</div>
	<div>
		<h4>Phone:</h4>
		<p>@Model.Phone</p>
	</div>
	<div>
		<h4>Email:</h4>
		<p>@Model.Email</p>
	</div>
	<div>
		<h4>Address:</h4>
		<p>@Model.Address</p>
	</div>
	<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-action="Index">Back to List</a>
	</form>
</div>